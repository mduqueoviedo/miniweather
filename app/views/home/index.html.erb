<div ng-controller="HomeController">
  <form>
    <div class="form-group">
      <label class="sr-only" for="city">City</label>
      <div class="input-group col-xs-6">
        <input type="text" class="form-control" id="city" placeholder="City, country" name="city" ng-model="search.city">
        <div class="input-group-addon actionable" ng-click="submit()">
          <i class="fa fa-search" aria-hidden="true"></i>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="button" class="btn btn-default" ng-click="getRandomLocation()">
          How is the weather somewhere else?
        </button>
      </div>
    </div>
  </form>
</div>
